<h2>Inventario Real Time</h2>
<div class="">
    <ul class="form-container">
        <h3>Nuevo Vehiculo</h3>
        <li>
            <label for="text-input">Title</label>
            <input id="title-input" class="text-input" type="text"/>
        </li>

        <li>
            <label for="text-input">Price</label>
            <input id="price-input" class="text-input" type="text"/>
        </li>

        <li>
            <label for="description-input">Description</label>
            <input id="description-input" class="text-input" type="textarea"/>
        </li>

        <li>
            <label for="category-input">Category</label>
            <input id="category-input" class="text-input" type="text"/>
        </li>

        <li>
            <label for="code-input">Code</label>
            <input id="code-input" class="text-input" type="text"/>
        </li>
        <li>
            <label for="stock-input">Stock</label>
            <input id="stock-input" class="text-input" type="text"/>
            <button onclick="send();">Enviar</button>
        </li> 
    </ul>

<section>
    <div class="container">
    {{#each vehicles}}
        <div class="card">
            <div class="header">
                <span class="title">{{this.title}}</span>
                <span class="price">${{this.price}}</span>
            </div>
            <p class="desc">{{this.description}}</p>
            <ul class="lists">
                <li class="list">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    <span>Category: {{this.category}}</span>
                </li>
                <li class="list">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    <span>Code: {{this.code}}</span>
                </li>
                <li class="list">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    <span>Stock: {{this.stock}}</span>
                </li>
            </ul>
            <button type="button" id={{this.id}} class="action" onclick="deleteVehicle({{{this.id}}})">Delete</button> 
        </div>
    {{/each}}
    </div>
</section>

<script src="/socket.io/socket.io.js"></script>
<script src="/index.js"></script>